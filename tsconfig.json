{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "diagnostics": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom",
      "dom.iterable",
      "webworker",
      "scripthost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noResolve": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "plugins": [
      {
        "lint": {
          "boxModel": "warning",
          "duplicateProperties": "error",
          "emptyRules": "warning",
          "float": "warning",
          "idSelector": "warning",
          "ieHack": "error",
          "importStatement": "warning",
          "vendorPrefix": "error",
          "zeroUnits": "error"
        },
        "name": "typescript-styled-plugin"
      }
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.mdx"
  ]
}
