{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": "./",
        "diagnostics": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "paths": {
            "*": [
                "*",
                "./src/*",
                "./vendor/*"
            ]
        },
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ]
    },
    "include": [
        "config/**/*",
        "src/**/*",
        "vendor/**/*"
    ]
}
